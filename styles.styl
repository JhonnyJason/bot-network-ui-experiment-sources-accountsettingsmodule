// accountsettings styles
id-copy-icon-size ?= 15px
cd-bright ?= white

#accountsettings
    color = cd-bright
    p.sideline
        margin-bottom: 40px
        text-align: center
        line-height: 17px
        svg
            width 22px
            height 22px
            vertical-align: middle
            margin-right 5px
            position relative
            top -4px 
    h1
        margin-top 40px !important
    h2
        margin-bottom 7px
    h3
        margin 10px 0


#options-grid
    margin-top 60px
    padding-bottom 30px

#keygeneration-frame
#keyimport-frame
#keyexport-frame
    display none

#generate-key-button
#import-key-button
    opacity: 0.2
    pointer-events: none

#id-display
    overflow hidden
    width 100%
    // background-color cd-flash
    background-color #024
    display flex
    padding 16px 7px
    box-sizing: border-box

    .display-frame-content
        text-overflow: ellipsis
        overflow hidden
        width "calc(100% - %s)" % id-copy-icon-size
    .copy-icon
        width id-copy-icon-size
        height id-copy-icon-size

#id-qr-line
    overflow: hidden
    text-align: center

.no-key
    #id-qr-line
    #id-display
    #delete-key-button
    #export-key-button
        opacity: 0.2
        pointer-events: none

    #generate-key-button
    #import-key-button
        opacity 1
        pointer-events: all


.generate-key
    #id-display-container
    #options-grid
        display: none
    
    #keygeneration-frame
        display block

.import-key
    #id-display-container
    #options-grid
        display: none
    
    #keyimport-frame
        display block


.export-key
    #id-display-container
    #options-grid
        display: none
    
    #keyexport-frame
        display block

/*====================================================================
Keygeneration Frame
====================================================================*/
#keygeneration-frame
    h2
        margin-top 50px
        margin-bottom 7px

#keygeneration-key-id-display
    background-color #024
    padding 16px 7px
    box-sizing: border-box
    margin-bottom 16px
    overflow: hidden
    text-overflow: ellipsis

// #keygeneration-regeneration-button
//     box-sizing: border-box
//     display: block

#keygeneration-protected-indicator
    margin-top 20px
    svg
        height 30px
        width 30px
        margin-right 5px
    .label
        line-height: 30px
        font-weight: bold


#keygeneration-not-protected-indicator 
    color cd-warning-orange

#keygeneration-phrase-protected-indicator
    color: cd-okay-green
    display none

#keygeneration-qr-protected-indicator
    color: cd-okay-green
    display none

#keygeneration-protected-indicator.phrase-protected
    #keygeneration-not-protected-indicator 
        display none
    #keygeneration-phrase-protected-indicator
        display block

#keygeneration-protected-indicator.qr-protected
    #keygeneration-not-protected-indicator 
        display none
    #keygeneration-qr-protected-indicator
        display block

#keygeneration-protection-options
    margin-top: 16px 
    margin-bottom 60px
    display grid
    gap 20px
    
    .click-button
        color #000
        opacity: 0.7
        border solid 2px black
        svg
            height  25px
            width 25px

    .click-button.active
        color #fff
        opacity 1
        border: solid 2px cd-okay-green

#keygeneration-conclusion-row
    margin 30px 0

    #keygeneration-use-button
        opacity 0.2
        pointer-events: none

#keygeneration-conclusion-row.acceptable
    #keygeneration-use-button
        opacity 1
        pointer-events: all

/*====================================================================
Key Import Frame
====================================================================*/
#keyimport-conclusion-row
    margin 30px 0