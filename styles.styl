// accountsettings styles
picture-size ?= 90px
id-copy-icon-size ?= 15px
options-button-size ?= 30px
cd-bright ?= white
cd-dark ?= black 


#accountsettings
    color = cd-bright
    p.sideline
        margin-bottom: 40px
        text-align: center
        line-height: 17px
        svg
            width 22px
            height 22px
            vertical-align: middle
            margin-right 5px
            position relative
            top -4px


        
    h1
        margin-top 40px !important
    h2
        margin-bottom 7px
    h3
        margin 10px 0

    .flashy-button
        background-color cd-flash
        font-weight bold
        min-width 150px
        padding 10px
        border-radius: 3px
        display flex
        align-content: center
        justify-content: center
        svg
            height 15px
            width 15px
            margin-right 10px

    #delete-key-button.flashy-button
        background-color: #600

    #options-grid
        display grid
        margin-top 60px
        gap 20px
        grid-template-columns: 1fr 1fr
        padding-bottom 30px

#generate-key-button,
#import-key-button
    opacity: 0.2
    pointer-events: none


#id-display
    overflow hidden
    width 100%
    // background-color cd-flash
    background-color #024
    display flex
    padding 16px 7px
    box-sizing: border-box

    .display-frame-content
        text-overflow: ellipsis
        overflow hidden
        width "calc(100% - %s)" % id-copy-icon-size
    .copy-icon
        width id-copy-icon-size
        height id-copy-icon-size

#id-qr-line
    overflow: hidden
    text-align: center

.no-key
    #id-qr-line
    #id-display
    #delete-key-button
    #export-key-button
        opacity: 0.2
        pointer-events: none

    #generate-key-button
    #import-key-button
        opacity 1
        pointer-events: all


